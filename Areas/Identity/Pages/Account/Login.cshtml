@page
@model LoginModel
<style>
	#footer {
		display: none;
	}
</style>
<link href="~/css/rigster.css" rel="stylesheet" />
<link href="~/css/customer.css" rel="stylesheet" />
<section class="sign-in" dir="ltr" >
	<div class="container" style="
    margin-top: 25px;
    margin-bottom: 25px;
">
		<div class="signin-content">
			<div class="signin-image">
				<figure><img src="~/photos/signin-image.jpg" alt="sing up image"></figure>
				<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="signup-image-link">انشاء حساب جديد</a>
			</div>

			<div class="signin-form">
				<h2 class="form-title">تسجيل الدخول</h2>
				<form id="account" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

					<div class="form-group">
						<label asp-for="Input.Email"><i class="zmdi zmdi-account material-icons-name"></i></label>
						<input asp-for="Input.Email" type="text" placeholder="البريد الإلكتروني" />
						<span asp-validation-for="Input.Email" class="text-danger"></span>

					</div>
					<div class="form-group">
						<label asp-for="Input.Password"><i class="zmdi zmdi-lock"></i></label>
						<input asp-for="Input.Password" type="password" placeholder="كلمة المرور" />
						<span asp-validation-for="Input.Password" class="text-danger"></span>

					</div>
					<div class="form-group">
						<input type="checkbox" asp-for="Input.RememberMe" id="remember-me" class="agree-term" />
						<label for="remember-me" asp-for="Input.RememberMe" class="label-agree-term"><span><span></span></span>تذكرنى</label>
					</div>
					<div class="form-group">
						<a asp-area="Identity" asp-page="/Account/ForgotPassword">نسيت كلمة المرور؟</a>
					</div>
					<div class="form-group form-button">
						<input type="submit" name="signin" id="signin" class="form-submit" value="تسجيل الدخول" />
					</div>
				</form>
			</div>
		</div>
	</div>
</section>









@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
