@page
@model RegisterModel

<link href="~/css/rigster.css" rel="stylesheet" />

<style>
	#footer {
		display:none;
	}
	</style>

<div class="main" dir="rtl">

	<section class="signup">
		<div class="container" style="
    margin-top: 30px;
">
			<div class="signup-content">
				<div class="signup-form">
					<h2 class="form-title">انشاء حساب</h2>
					<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
						<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

						<div class="form-group">
							<label asp-for="Input.FullName" for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
							<input type="text"  asp-for="Input.FullName" id="name" placeholder="الاسم" />
							<span asp-validation-for="Input.FullName" class="text-danger"></span>

						</div>
						<div class="form-group">
							<label for="email" asp-for="Input.Email"><i class="zmdi zmdi-email"></i></label>
							<input type="email" asp-for="Input.Email"  id="email" placeholder="البريد الإلكتروني" />
							<span asp-validation-for="Input.Email" class="text-danger"></span>

						</div>
						<div class="form-group">
							<label for="pass" asp-for="Input.Password"><i class="zmdi zmdi-lock"></i></label>
							<input type="password" asp-for="Input.Password"  id="pass" placeholder="كلمة السر" />
							<span asp-validation-for="Input.Password" class="text-danger"></span>


						</div>
						<div class="form-group">
							<label for="re-pass" asp-for="Input.ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
							<input type="password" asp-for="Input.ConfirmPassword"  id="re_pass" placeholder="تأكيد كلمة السر" />
							<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

						</div>
						<div class="form-group form-button">
							<input type="submit" id="signup" class="form-submit" value="تسجيل" />
						</div>
					</form>
				</div>
				<div class="signup-image">
					<figure><img src="~/photos/signup-image.jpg" alt="sing up image"></figure>
					<span>هل لديك حساب بالفعل؟</span>
					<a asp-area="Identity" asp-page="/Account/Login" class="signup-image-link">تسجيل الدخول</a>
				</div>
			</div>
		</div>
	</section>
	</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
