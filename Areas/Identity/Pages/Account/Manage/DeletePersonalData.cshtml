@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "حذف ملفك الشخصى";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<style>
 .col-md-9 {
  width: 73%;
 }
</style>
<h3>@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p>
  <strong>سيؤدي حذف هذه البيانات إلى إزالة حسابك نهائيًا، ولا يمكن استرداد ذلك..</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="ادخل كلمة المرور الحالية" />
                <label asp-for="Input.Password" class="form-label">ادخل كلمة المرور</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">حذف الحساب</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
